{
  "name": "react-course-routing",
  "workspaces": [
    "frontend",
    "back-end"
  ],
  "dependencies": {
    "cp": "^0.2.0",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "reset": "cp \"./back-end/backup/original_db.json\" ./back-end/db.json",
    "frontend": "npm run dev --workspace=frontend",
    "back-end": "npm run dev --workspace=back-end",
    "dev": "npm-run-all --parallel frontend back-end"
  }
}
